pkgbase='paparazzi-gcc'
_subarchs=('armv6h' 'armv7h')
pkgname=("${_subarchs[@]/#/$pkgbase-}")
pkgver=1.0
pkgrel=1
pkgdesc="Meta package to include a arm compiler for armv6h and arm7vh, specifically built for paparazzi"
arch=('i686' 'x86_64')
url='http://archassault.org'
license=('GPL')
options=('libtool' 'emptydirs' '!strip')
groups=('archassault archassault-drones')
if [ "${CARCH}" = "x86_64" ]; then
    depends=('lib32-ncurses' 'lib32-glibc')
else
    depends=('ncurses' 'glibc')
fi
source=('http://archlinuxarm.org/builder/xtools/x-tools6h.tar.xz'
        'http://archlinuxarm.org/builder/xtools/x-tools7h.tar.xz')
sha256sums=('8a2d1577fe583f8cf7062f69a24d8b8e3fb7dca3891a469506653ed022af2ccc'
            'aeac9224c4b14b94499b8747ac0510cfe261884cf6866fc5963475bfb5bdabaf')

package_paparazzi-gcc-armv6h(){
   cd "$srcdir/x-tools6h"
   install -dm755 "$pkgdir/usr/local/$pkgbase-armv6h"
   cp -ar * "$pkgdir/usr/local/$pkgbase-armv6h"      
}

package_paparazzi-gcc-armv7h(){
  cd "$srcdir/x-tools7h"
  install -dm755 "$pkgdir/usr/local/$pkgbase-armv7h"
   cp -ar * "$pkgdir/usr/local/$pkgbase-armv7h"
}


