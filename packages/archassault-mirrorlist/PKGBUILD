pkgname=archassault-mirrorlist
pkgver=20140128
pkgrel=1
pkgdesc="ArchAssault Project mirror list for use by pacman"
arch=('any')
url="http://archassault.org/mirrorlist/"
license=('GPL')
backup=(etc/pacman.d/archassault-mirrorlist)
source=(archassault-mirrorlist)

# NOTE on building this package:
# * Go to the trunk/ directory
# * Run bash -c ". PKGBUILD; updatelist"
# * Update the checksums, update pkgver
# * Build the package

updatelist() {
  rm -f archassault-mirrorlist
  wget --no-check-certificate -O archassault-mirrorlist https://archlassault.org/mirrorlist/all/http/
}

package() {
  mkdir -p $pkgdir/etc/pacman.d
  install -m644 $srcdir/archassault-mirrorlist $pkgdir/etc/pacman.d/
}

md5sums=('b4507614bf4547cb9fe7bfdf92119f8d')
sha256sums=('af2a88d09d91afae419f5dd80d98500eee5a6ed6f869bf2a0878aa4ae89e25bb')

