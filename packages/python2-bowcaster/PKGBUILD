# Maintainer: ArchAssault <team archassault org>
pkgname=python2-bowcaster
pkgver=0.1
pkgrel=1
groups=('archassault' 'archassault-exploits')
pkgdesc="An open-source forensic framework written in Python/GTK that manages cases and case items, providing an abstract interface for developing extensions."
arch=('any')
url='https://github.com/zcutlip/bowcaster'
license=('GPL2')
depends=('python2')
makedepends=('python2-setuptools')
provides=('python2-bowcaster-git')
replaces=('python2-bowcaster-git')
conflicts=('python2-bowcaster-git')
source=("https://github.com/zcutlip/bowcaster/archive/v$pkgver.tar.gz")
md5sums=('97e99be67863a45a9bb85044bf491833')

prepare(){
  grep -iRl 'python' "$srcdir/bowcaster-$pkgver" | xargs sed -i 's|#!.*/usr/bin/python|#!/usr/bin/python2|;s|#!.*/usr/bin/env python$|#!/usr/bin/env python2|'
}


package() {
  cd "$srcdir/bowcaster-$pkgver"
  python2 setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
