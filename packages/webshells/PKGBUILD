pkgname=webshells
pkgver=0.r6.690ebd9
pkgrel=1
epoch=100
groups=('archassault' 'archassault-webapp' 'archassault-backdoor')
pkgdesc="Web Backdoors"
url="https://github.com/ArchAssault/webshells"
arch=('any')
license=('custom')
source=("git+https://github.com/ArchAssault/webshells.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/webshells"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "$srcdir/webshells"

  # Base directories.
  install -dm755 "$pkgdir/usr/share/webshells"

  cp -a --no-preserve=ownership * "$pkgdir/usr/share/webshells"
}
