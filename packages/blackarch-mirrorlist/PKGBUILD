pkgname=archassault-mirrorlist
pkgver=20131217
pkgrel=1
pkgdesc="ArchAssault Linux mirror list for use by pacman"
arch=('any')
url="http://www.archassault.org/mirrorlist/"
license=('GPL')
backup=(etc/pacman.d/mirrorlist-archassault)
source=(mirrorlist-archassault)
md5sums=('8e93e5714365a2c5c6af2d1564a3b296')

# NOTE on building this package:
# * Go to the trunk/ directory
# * Run bash -c ". PKGBUILD; updatelist"
# * Update the checksums, update pkgver
# * Build the package

# Leaving this in and commented out until our new site is live so we can build it with this method
