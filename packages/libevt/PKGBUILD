# Maintainer: ArchAssault <team archassault org>
pkgname="libevt"
pkgver="20141229"
pkgrel=1
pkgdesc="Library and tooling to access the Windows Event Log (EVT) format"
arch=("i686" "x86_64" "armv6h" "armv7h")
url='https://github.com/libyal/libevt'
license=('GPL3')
depends=('libcsystem' 'libbfio' 'python2')
makedepends=('git')
source=("https://github.com/libyal/libevt/archive/$pkgver.tar.gz")
sha512sums=('e6a696bc5a8a765e67d9210d4ca9d81396c0e179d7594e9d9829ac8c954ab32ebffaba73d55fd1d4f057ae364d8e4013a831e5f05ecdd928f9dcdaeacfd30fea')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./synclibs.sh
  ./autogen.sh
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
