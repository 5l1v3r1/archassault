pkgname=archassault-keyring
pkgver=20130708
pkgrel=1
pkgdesc='BlackArch PGP keyring'
arch=('any')
url='https://github.com/BlackArchLinux/archassault-keyring'
makedepends=('git')
license=('GPL')
install="archassault-keyring.install"
source=("archassault-keyring::git://github.com/BlackArchLinux/archassault-keyring.git")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/archassault-keyring"
	git log -1 --format="%cd" --date=short | sed 's|-||g'
}

package() {
	cd "$srcdir/archassault-keyring"
	make PREFIX=/usr "DESTDIR=$pkgdir" install
}

