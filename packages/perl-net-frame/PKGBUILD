# Maintainer: ArchAssault <team@archassault.org>
pkgname='perl-net-frame'
pkgver='1.14'
pkgrel='1'
pkgdesc='The base framework for frame crafting.'
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-bit-vector' 'perl-class-gomor' 'perl-net-ipv6addr'
'perl-socket6')
url='http://search.cpan.org/dist/Net-Frame'
source=("http://search.cpan.org/CPAN/authors/id/G/GO/GOMOR/Net-Frame-$pkgver.tar.gz")
sha512sums=('311b48cb9737c9fc4695d3deddc8beb62105a975bab53bbb9525980f6f87651df080fa3020fe16f36907459cf8cd0d8827d804e1062e3f2bf0cb5c2d31ee3635')
_distdir="Net-Frame-$pkgver"

prepare() {
  cd "$srcdir/$_distdir"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB="" \
    PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'" \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  /usr/bin/perl Makefile.PL
}

build() {
  cd "$srcdir/$_distdir"
  make
}

package() {
  cd "$srcdir/$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
