# Maintainer: ArchAssault <team@archassault.org>
pkgname=python2-gitpython
pkgver=0.3.4
pkgrel=1
pkgdesc="A python library used to interact with Git repositories"
arch=('any')
url="http://gitorious.org/git-python"
license=('BSD')
depends=('python2' 'git' 'python2-gitdb>=0.6.2')
makedepends=('python2' 'python2-distribute')
conflicts=('gitpython-git' 'gitpython')
source=("http://pypi.python.org/packages/source/G/GitPython/GitPython-$pkgver.tar.gz")
sha512sums=('e0120f5f52484f97d3666170e9d054661cbfabbdc10285f3a4b02282afed96b75e98ca890f5b484399408a035896ab5f5e8466ed2e63a9a77de3fdb5829d76ab')

package() {
  cd "$srcdir/GitPython-$pkgver"

  python2 setup.py install --root="$pkgdir/" --optimize=1
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
