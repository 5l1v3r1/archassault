# Maintainer: ArchAssault <team@archassault.org>

_pkgname=tblib
pkgname=python2-$_pkgname
pkgver=0.2.0
pkgrel=1
arch=('any')
pkgdesc='Traceback fiddling library.'
license=('BSD')
url='https://github.com/ionelmc/python-tblib'
depends=('python2')
makedepends=('python2-distribute')
source=("https://pypi.python.org/packages/source/t/$_pkgname/$_pkgname-$pkgver.tar.gz")
md5sums=('60468d285d9b39992310e2a00fdde54c')
sha512sums=('2ff69b8aa6112caeba0773789f4db5f9b9bf08bc002beaa3cca3a5e11a024472fe93a6597b26a424ab1064850dd71a3ab83d297d75b602411fa649cc67a0cc73')

build() {
  cd $_pkgname-$pkgver
  python2 setup.py build
}

package() {
  export PYTHONPATH="$pkgdir/usr/lib/python2.7/site-packages/"
  cd $_pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
