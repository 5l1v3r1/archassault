pkgname=python2-service_identity
pkgver=14.0.0
pkgrel=1
pkgdesc="Service identity verification for pyOpenSSL."
arch=('any')
url='https://pypi.python.org/pypi/service_identity'
license=('MIT')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/source/s/service_identity/service_identity-${pkgver}.tar.gz" "LICENSE")
sha512sums=('d504ad388defb38a86ca82c8ff9582dbb664a929e4b4ee7f6732b2da5326c33b1764384a8d849972f83ae7800c775daf90c1f3fbc61b8d2c29294f44c7cd36d2'
            '702209ef35da1d73dedb18251ddd929d3802c29c4f60b3f06a8fab31a0a21c3fce1dd142be07bf1e7447ffb1809990ee8e5c2d920da65a84e170b565f265a27e')

package() {
  cd "$srcdir/service_identity-$pkgver"
  python2 setup.py install "--root=$pkgdir" --optimize=1
  install -Dm644 $srcdir/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
