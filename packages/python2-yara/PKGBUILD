pkgname=python2-yara
pkgver=3.0.0
pkgrel=1
groups=('archassault' 'archassault-malware')
pkgdesc="A malware identification and classification tool"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='https://github.com/plusvic/yara'
license=('APACHE')
replaces=('yara-python')
depends=('python2' 'yara')
source=("https://github.com/plusvic/yara/archive/v$pkgver.tar.gz")
sha512sums=('b4342d1eba2df7866576ec578b7cf8dbbae8c54bfa7a7394f178faf786fb3b00f632191e1a815a6f9f9924c92ae4caacd2f526d4cb7a95a1d3d33fa4f2b3f9ea')

build() {
  cd "$srcdir/yara-$pkgver/yara-python"
  sed -i 's|env python$|env python2|' *.py
	python2 setup.py build
}

package() {
  cd "$srcdir/yara-$pkgver/yara-python"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
