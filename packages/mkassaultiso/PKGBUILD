pkgname=mkbaiso
pkgver=13
pkgrel=1
epoch=100
pkgdesc="Tools for creating ArchAssault Linux live and install iso images"
arch=('any')
url="https://github.com/ArchAssault/mkbaiso"
license=('GPL')
depends=('archiso')
source=("git+http://github.com/ArchAssault/mkbaiso.git")
md5sums=('SKIP')

package() {
  cd "$srcdir/mkbaiso"
  install -Dm755 "mkbaiso" $pkgdir/usr/bin/mkbaiso
}
