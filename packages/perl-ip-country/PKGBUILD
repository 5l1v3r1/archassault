pkgname=perl-ip-country
_cpanname=IP-Country
pkgver=2.27
pkgrel=1
pkgdesc="fast lookup of country codes from IP addresses "
arch=('any')
url="http://search.cpan.org/~NWETTERS/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl-geography-countries')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/N/NW/NWETTERS/${_cpanname}-${pkgver}.tar.gz) 
sha512sums=('d8f04d17e416c36346b67034522baf8601837cda52eca7d7cf8d424961f638405f76b309226252a30f1c56d0907a717281b5849d04b8bf9adef06caa040e6d5e')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 
  make 
}

package(){
  cd $srcdir/${_cpanname}-${pkgver}
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
