# Maintainer: ArchAssault <team@archassault.org>

pkgname=python-shodan
pkgver=1.2.1
pkgrel=1
pkgdesc="Python library for Shodan (https://developer.shodan.io)"
url="http://github.com/achillean/shodan-python/tree/master"
depends=('python')
license=('MIT')
arch=('any')
source=("https://pypi.python.org/packages/source/s/shodan/shodan-${pkgver}.tar.gz")
sha512sums=('08715d47fc51de37655945aa47d3022c3350b87ef48708bb79a9fa15565b6f63dfc3bd4304cb3705d302d0fca675a9c5c99d272172f169f1490a980ad51c7583')

build() {
  cd ${srcdir}/shodan-${pkgver}
  python setup.py build
}

package() {
  cd ${srcdir}/shodan-${pkgver}
  python setup.py install --root="${pkgdir}" --optimize=1
  install -Dm0644 LICENSE "${pkgdir}"/usr/share/licenses/"${pkgname}"/LICENSE
}
