pkgname=archassault-install-scripts
pkgver=0.1
pkgrel=1
pkgdesc="Easy Blackarch Install Script"
arch=('i686' 'x86_64')
url="https://github.com/BlackArch/archassault-install-scripts"
license=('GPL')
source=("https://github.com/BlackArch/archassault-install-scripts/archive/master.zip")
md5sums=('SKIP')


package() {
  cd "$srcdir/archassault-install-scripts-master"

  install -dm755 "$pkgdir/usr/bin/"
  install -dm755 "$pkgdir/usr/share/archassault-install-scripts"

  cp -r --no-preserve=ownership * "$pkgdir/usr/share/archassault-install-scripts"

  ln -s "/usr/share/archassault-install-scripts/archassault-install" "$pkgdir/usr/bin/archassault-install"
}
