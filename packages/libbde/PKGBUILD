# Maintainer: ArchAssault <team archassault org>
pkgname="libbde"
pkgver="20150124"
pkgrel=1
pkgdesc="Library and tools to access the BitLocker Drive Encryption (BDE) encrypted volumes"
arch=("i686" "x86_64" "armv6h" "armv7h")
url='https://github.com/libyal/libbde'
license=('GPL3')
depends=('fuse' 'libcsystem' 'libbfio' 'python2')
makedepends=('git')
install="$pkgname.install"
source=("https://github.com/libyal/libbde/archive/$pkgver.tar.gz")
sha512sums=('be98fcccbe8113609deab039fd8a56419ab932aee50cbd4b46d955fc65ea68f06917ea84a45bc9be5c458dae3f6f697c6685bdd2303b6121661079b579c42739')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./synclibs.sh
  ./autogen.sh
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
