pkgname=chaosreader
pkgver=0.94
pkgrel=4
pkgdesc="Fetch application data from snoop or tcpdump logs"
arch=('any')
url="http://www.brendangregg.com/chaosreader.html"
license=('GPL')
groups=('archassault')
depends=(perl)
_filename="$pkgname$pkgver"
source=("http://download.sourceforge.net/sourceforge/chaosreader/$_filename")
noextract=($_filename)
sha512sums=("0ddba8d176be2d26004070dfa1e521921cdc84ac4e1652b889e7962d5beacbf752232a83dd4b7575e770b4d7ec40ea2afca4f76cacf53dbb590a46a0aa66cdac")

package() {
  cd $srcdir
  install -m755 -D $_filename $pkgdir/usr/bin/$pkgname
}
