# Maintainer: ArchAssault <team@archassault.org>
pkgname=dnsrecon
pkgver=0.8.8
pkgrel=4
groups=('archassault' 'archassault-reconnaissance')
pkgdesc="Python script for enumeration of hosts, subdomains and emails from a given domain using google."
url="https://github.com/darkoperator/dnsrecon"
license=('GPL2')
arch=('any')
depends=('python2-netaddr' 'python2-dnspython')
makedepends=('git')
source=("git+https://github.com/darkoperator/dnsrecon")
sha512sums=('SKIP')

pkgver() {
  cd "$srcdir/dnsrecon"

  # We have to get the version number from the README file. It's better than nothing.
  grep -m1 'Version ' README.md | sed 's/.* //'
}

package() {
  cd "$srcdir"

  install -dm755 "$pkgdir/usr/share"
  install -dm755 "$pkgdir/usr/share/license"
  install -dm755 "$pkgdir/usr/bin"

  cp -a * "$pkgdir/usr/share/dnsrecon"

cat > "$pkgdir/usr/share/license/$pkgname" << EOF
DNSRecon

Copyright (C) 2014  Carlos Perez

This program is free software; you can redistribute it and/or modify
it under the terms of the GNU General Public License as published by
the Free Software Foundation; Applies version 2 of the License.

This program is distributed in the hope that it will be useful,
but WITHOUT ANY WARRANTY; without even the implied warranty of
MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
GNU General Public License for more details.

You should have received a copy of the GNU General Public License
along with this program; if not, write to the Free Software
Foundation, Inc., 51 Franklin St, Fifth Floor, Boston, MA  02110-1301  USA

EOF

cat > "$pkgdir/usr/bin/dnsrecon" << EOF
#!/bin/sh
cd /usr/share/dnsrecon
python2 dnsrecon.py "\$@"
EOF
  chmod +x "$pkgdir/usr/bin/dnsrecon"
  rm -rf "$pkgdir"/usr/share/dnsrecon/.git
  sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
   -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
   -e "s|#![ ]*/bin/python$|#!/usr/bin/python2|" \
   -e "s|#![ ]*/usr/local/bin/python$|#!/usr/bin/python2|" \
   $(find ${pkgdir} -name '*.py')
}
