# Maintainer: ArchAssault <team archassault org>
pkgname="libfwsi"
pkgver="20150105"
pkgrel=1
pkgdesc="Library to access the Windows Shell Item format"
arch=("i686" "x86_64" "armv6h" "armv7h")
url='https://github.com/libyal/libfwsi'
license=('GPL3')
depends=('libcsystem' 'libbfio' 'python2')
makedepends=('git')
source=("https://github.com/libyal/libfwsi/archive/$pkgver.tar.gz")
sha512sums=('1d5cbfddad6f4390359c65519d5f3d03e1c5bc1530ecb3ed403dba9e8ade1d17c0112a20b193f7905a9f61a1c46af751a3a2831feb4a166922dbb6cea7ff2ea5')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./synclibs.sh
  ./autogen.sh
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
