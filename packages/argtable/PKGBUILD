# Maintainer: ArchAssault <team archassault org>

pkgname=argtable
pkgver=2.11
pkgrel=4
pkgdesc="ANSI C command line parser"
url="http://argtable.sourceforge.net/"
license=('GPL')
groups=()
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
source=("http://downloads.sourceforge.net/argtable/argtable${pkgver/./-}.tar.gz")
sha512sums=('ad9d11963a215586fa3df7b0afa10585abd22d3b83419fffdae7002aca89bad045ee362821090807c76720b3058c00d675837c48f877e830d49ce1f3c6bc9322')

build() {
    cd "${pkgname}${pkgver/./-}"

    ./configure --prefix=/usr
    make
}

package() {
    cd "${pkgname}${pkgver/./-}"
    make "DESTDIR=${pkgdir}" install
}
