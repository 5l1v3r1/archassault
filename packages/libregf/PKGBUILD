# Maintainer: ArchAssault <team archassault org>
pkgname="libregf"
pkgver="20150105"
pkgrel=1
pkgdesc="Library and tools to access the Windows NT Registry File (REGF) format"
arch=("i686" "x86_64" "armv6h" "armv7h")
url='https://github.com/libyal/libregf'
license=('GPL3')
depends=('fuse' 'libcsystem' 'libbfio' 'python2')
makedepends=('git')
source=("https://github.com/libyal/libregf/archive/$pkgver.tar.gz")
sha512sums=('5d32a9a9dd9c3126daea54e9a0f72c575d9211db2ab937255fe58e2bce98185dd784f9c3f5894a9eefd06df0d118559388a73e5edefe414de4d185b5dbab5562')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./synclibs.sh
  ./autogen.sh
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
