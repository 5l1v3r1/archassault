license=('custom')
source=("http://didierstevens.com/files/software/pdfid_v0_1_2.zip" "LICENSE")
depends=('python')
sha256sums=('1cf36c50427a2206275c322a8c098cd96a844caf6077b105ade9b1974789856f'
            '04f6ad0e913c5674ff466e858d251333dc4f104fa0c5da46ff7f5f821233fa00')
sha512sums=('1b7c861db1979bac503f6b7a9be4035c43f156997a0e351beb508219124d348510ef6fb32e7d7e3273aee48d640d4dded643b15c7cc2ff1cbe6e6404baebb596'
            'c22cd4975b68420afec20111262d92b9d0690aadd366777d1f20fe557aecf95cebea9dfc9ff9ebe4ebfde98736bb02a4ecbf56d469407a96e44f6416e76ebbf2')

package() {
  cd "${srcdir}"
