#!/usr/bin/env bash

# Run this script in a package directory (containing a PKGBUILD) to
# remove typical makepkg-generated files ('src', 'pkg', source
# package and package) before running makepkg again.

# FAIL IF NO PKGBUILD IS FOUND
[[ ! -f PKGBUILD ]] && exit 1

# REMOVE ALL MAKEPKG-GENERATED FILES AND DIRS
rm -rf src pkg *.pkg.tar.* *.src.tar.*

# MAKE THE PACKAGE AGAIN
makepkg
